<div class="container mx-auto px-4 pt-4 pb-8">
  <div class="mb-6">
    <%= link_to "← Back to Projects", projects_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @project.name %></h1>

    <span class="<%= @project.status_color_class %> px-3 py-1 rounded-full text-sm font-medium inline-block mb-4">
      <%= @project.status.humanize.titleize %>
    </span>

    <div class="mt-4">
      <p class="text-gray-600"><%= @project.description %></p>
    </div>
  </div>
</div>
